                <span asp-validation-for="WhoRemoved" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="WhenRemoved" class="col-md-3 mt-3"></label>
                <div class="col-md-9">
                    <input asp-for="WhenRemoved" class="form-control" />
                </div>
                <span asp-validation-for="WhenRemoved" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="IsActive" class="col-md-3 mt-3"></label>
                <div class="col-md-9">
                    <input asp-for="IsActive" class="form-control" />
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <span class="col-md-3 mt-3ed"></span>
                <div class="col-md-9 align-center mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <div class="mt-4">
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

                    <input asp-for="PageLink" class="form-control" />
                </div>
                <span asp-validation-for="PageLink" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="PageLinkPosition" class="col-md-3 mt-3"></label>
                <div class="col-md-9">
                    <input asp-for="PageLinkPosition" class="form-control" />
                </div>
                <span asp-validation-for="PageLinkPosition" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="WhoAdded" class="col-md-3 mt-3"></label>
                <div class="col-md-9">
                    <input asp-for="WhoAdded" class="form-control" />
                </div>
                <span asp-validation-for="WhoAdded" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="WhenAdded" class="col-md-3 mt-3"></label>
                <div class="col-md-9">
                    <input asp-for="WhenAdded" class="form-control" />
                </div>
                <span asp-validation-for="WhenAdded" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="WhoModified" class="col-md-3 mt-3"></label>
                <div class="col-md-9">
                    <input asp-for="WhoModified" class="form-control" />
                </div>
                <span asp-validation-for="WhoModified" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="WhenModified" class="col-md-3 mt-3"></label>
                <div class="col-md-9">
                    <input asp-for="WhenModified" class="form-control" />
                </div>
                <span asp-validation-for="WhenModified" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="WhoRemoved" class="col-md-3 mt-3"></label>
                <div class="col-md-9">
                    <input asp-for="WhoRemoved" class="form-control" />

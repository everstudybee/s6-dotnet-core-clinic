@model Clinic.Entities.Models.Page

@{
    ViewData["Title"] = "Create Page";
    ViewData["BreadcrumbAnchor"] = "Create Page";
    ViewData["BreadcrumbLink"] = "/Page";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row center-content">

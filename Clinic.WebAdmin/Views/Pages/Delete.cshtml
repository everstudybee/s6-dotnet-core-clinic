@model Clinic.Entities.Models.Page

@{
    ViewData["Title"] = "Delete Page";
    ViewData["BreadcrumbAnchor"] = "Delete Page";
    ViewData["BreadcrumbLink"] = "/Pages";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="row center-content">
    <dl class="row  col-md-6">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PageAnchorText)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PageAnchorText)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PageLink)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PageLink)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.PageLinkPosition)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.PageLinkPosition)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.WhoAdded)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.WhoAdded)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.WhenAdded)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.WhenAdded)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.WhoModified)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.WhoModified)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.WhenModified)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.WhenModified)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.WhoRemoved)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.WhoRemoved)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.WhenRemoved)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.WhenRemoved)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <div class="mt-4 align-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="PageId" />
                <input type="submit" value="Delete" class="btn btn-danger mb-3" /><br>
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </dl>
</div>

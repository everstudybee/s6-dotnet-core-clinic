@model Clinic.WebAdmin.Models.Dashboard.DashboardSummary

@{
    ViewData["Title"] = "Home Page";
    ViewData["BreadcrumbAnchor"] = "...";
    ViewData["BreadcrumbLink"] = "/";
}


<!-- ============================================================== -->
<!-- Sales chart -->
<!-- ============================================================== -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="d-md-flex align-items-center">
                    <div>
                        <h4 class="card-title">Site Analysis</h4>
                        <h5 class="card-subtitle">Database Overview</h5>
                    </div>
                </div>
                <div class="row center-content">
                    <div class="col-lg-6">
                        <div class="row">
                            <a href="/Parameters" class="col-6">
                                <div class="bg-dark p-30 text-white text-center">
                                    <i class="mdi mdi-server mb-1 font-32"></i>
                                    <h2 class="mb-0 mt-1">@Model.TotalParameters</h2>
                                    <small class="font-light">Total Parameters</small>
                                </div>
                            </a>
                            <a href="/Pages" class="col-6">
                                <div class="bg-dark p-30 text-white text-center">
                                    <i class="mdi mdi-book-multiple mb-1 font-32"></i>
                                    <h2 class="mb-0 mt-1">@Model.TotalPages</h2>
                                    <small class="font-light">Total Pages</small>
                                </div>
                            </a>
                            <a href="/Doctors" class="col-6 mt-3">
                                <div class="bg-dark p-30 text-white text-center">
                                    <i class="mdi mdi-account-box mb-1 font-32"></i>
                                    <h2 class="mb-0 mt-1">@Model.TotalDoctors</h2>
                                    <small class="font-light">Total Doctors</small>
                                </div>
                            </a>
                            <a href="/Services" class="col-6 mt-3">
                                <div class="bg-dark p-30 text-white text-center">
                                    <i class="mdi mdi-checkbox-multiple-marked mb-1 font-32"></i>
                                    <h2 class="mb-0 mt-1">@Model.TotalServices</h2>
                                    <small class="font-light">Total Services</small>
                                </div>
                            </a>
                        </div>
                    </div>
                    <!-- column -->
                </div>
            </div>
        </div>
    </div>
</div>

